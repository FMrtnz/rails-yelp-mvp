<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <meta name="viewport" content="width=device-width, initial-scale=1">
      <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
  <div class="navbar-wagon navbar-default">
    <p class="navbar-left"><%= link_to icon('list'), restaurants_path, class:"" %></p>
    <p class="navbar-right"><%= link_to icon("plus")+' '+icon('cutlery'), new_restaurant_path, class:"" %></p>
    <style> p {padding: 5px;}</style>
  </div>
    <%= yield %>
  </body>
</html>
