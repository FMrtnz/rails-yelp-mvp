<div class="container-fluid center">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-3">
      <h1>Restaurants#new</h1>
      <p>Find me in app/views/restaurants/new.html.erb</p>

      <div class="form-horizontal">
        <div class="form-group text-align">
          <%= simple_form_for @restaurant do |f| %>
            <%= f.input :name %>
            <%= f.input :address %>
            <%= f.input :phone_number %>
            <%= f.label :category %>
            <br>
            <%= f.select :category, Restaurant::CATEGORIES %>
            <br>
            <%= f.submit "add", class: "btn btn-primary padding" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
