<div class="container-fluid center">

  <div class="row">
    <div class="col-sm-9 col-sm-offset-3">
      <h1>Restaurants#show</h1>
      <p>Find me in app/views/restaurants/show.html.erb</p>
        <h2><%= @restaurant.name %></h2>
          <p><%= "Address: #{@restaurant.address}" %></p>
          <p><%= "Num: #{@restaurant.phone_number}" %></p>
          <p><%= "Category: #{@restaurant.category}" %></p>
          <h3>Reviews</h3>
          <% @restaurant.reviews.each do |review| %>
          <ul>
          <li><%= "#{review.content} rating: #{review.rating}" %></li>
          </ul>
          <% end %>
          <%= link_to 'Add review', new_restaurant_review_path(@restaurant.id), class: "btn btn-primary" %>
    </div>
  </div>

</div>
